@model List<UrlPair>

<table class="table table-striped table-hover">
    <tr>
        <th>Short url</th>
        <th>Original url</th>
        <th>Entries</th>
        <th>Create date</th>
        <th>Logger</th>
        <th>Delete</th>
    </tr>
    @foreach (var pair in Model)
    {
        <tr>
            <td>@pair.ShortUrl</td>
            <td><a href="@pair.FullUrl" target="_blank">@pair.FullUrl</a></td>
            <td>@pair.Entries</td>
            <td>@pair.Created</td>
            <td><a asp-controller="Shortify" asp-action="Logger" asp-route-shorturl="@pair.ShortUrl">Logger</a></td>
            <td>
                <a asp-action="Delete" asp-controller="Shortify" asp-route-shorturl="@pair.ShortUrl">
                <i class="fa-solid fa-trash"></i>
                </a>
            </td>
        </tr>
    }
</table>

@section Scripts {
    <script src="https://kit.fontawesome.com/86106e9417.js" crossorigin="anonymous"></script>
    }